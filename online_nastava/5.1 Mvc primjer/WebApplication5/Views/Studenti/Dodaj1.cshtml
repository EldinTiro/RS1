@using FormMethod = Microsoft.AspNetCore.Mvc.Rendering.FormMethod

@{
    ViewData["Title"] = "Dodaj";
    string sIme = (string)ViewData["saljemIme"];
    string sPrezime = (string)ViewData["saljemPrezime"];
}

<h2>Dodaj</h2>

@using (Html.BeginForm("Snimi1", "Studenti", new {}, FormMethod.Post, true, new {}))
{

    <div class="form-group">
        <div class="row">
            <div class="col-md-10">

                @Html.TextBox("txtIme", sIme, null, new {@class="form-control"})
            </div>
        </div>
    </div>
   
    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                <input type="text" name="txtPrezime" value="@sPrezime" class="form-control"/>
            </div>
        </div>
    </div>
   

    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Log in" class="btn btn-primary" />
            </div>
        </div>
    </div>

}