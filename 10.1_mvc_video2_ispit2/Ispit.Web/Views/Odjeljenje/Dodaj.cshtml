@using Ispit.Web.ViewModels

@model OdjeljenjeDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj</h2>


<form action="/Odjeljenje/Snimi">
    <div class="form-group">
        <label>Školska godina: </label>
        <div>
            <input type="text" name="skolaGodina"  class="form-control"/>
        </div>
    </div>
    
    <div class="form-group">
        <label>Razred: </label>
        <div>
            <input type="text" name="razred"  class="form-control"/>
        </div>
    </div>
    
    <div class="form-group">
        <label>Oznaka: </label>
        <div>
            <input type="text" name="oznaka"  class="form-control"/>
        </div>
    </div>
    
    <div class="form-group">
        <label>Razrednik: </label>
        <div>
            <select  name="razrednikID"  class="form-control">
                @foreach (var x in Model.nastavnici)
                {
                    <option value="@x.Value">@x.Text</option>
                }
            </select>
        </div>
    </div>
    
    <div class="form-group">
        <label>Niže odjeljenje: </label>
        <div>
            <select  name="odjeljenjeID"  class="form-control">
                @foreach (var x in Model.odjeljenja)
                {
                    <option value="@x.Value">@x.Text</option>
                }
            </select>
        </div>
    </div>

    <input type="submit" value="Snimi"/>
</form>